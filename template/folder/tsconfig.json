{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "jsx": "react",
    "noEmit": true,
    "target": "ES2017",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["vite/client", "node"],
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
