{
  "name": "make-web-game",
  "version": "0.0.8",
  "author": "Simon Lagos <simon.lagos.sallhed@gmail.com>",
  "license": "MIT",
  "private": false,
  "files": [
    "dist/"
  ],
  "directories": {
    "example": "example"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sajmoni/make-web-game.git"
  },
  "bin": "dist/index.js",
  "scripts": {
    "clean": "rm -rf ./example/test-game && rm -f make-web-game.tgz",
    "build-test": "./build-test.sh",
    "build": "rm -rf dist && parcel build src/index.js --target node --no-cache",
    "typecheck": "tsc --module commonjs --allowJs --checkJs --noEmit --target es2016 --resolveJsonModule src/*.js",
    "lint": "eslint src",
    "check-all": "yarn lint && yarn typecheck",
    "release": "yarn clean && yarn check-all && yarn audit && yarn build && np --no-tests"
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.20.1",
    "np": "6.1.0",
    "parcel-bundler": "1.12.4",
    "parcel-plugin-shebang": "1.2.8",
    "parcel-plugin-static-files-copy": "2.3.1",
    "typescript": "3.8.2"
  },
  "dependencies": {
    "chalk": "3.0.0",
    "commander": "4.1.1",
    "cross-spawn": "7.0.1",
    "fs-extra": "8.1.0"
  }
}
