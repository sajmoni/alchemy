{
  "name": "make-web-game",
  "version": "0.0.8",
  "author": "Simon Lagos <simon.lagos.sallhed@gmail.com>",
  "license": "MIT",
  "private": false,
  "files": [
    "dist/"
  ],
  "directories": {
    "example": "example"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sajmoni/make-web-game.git"
  },
  "bin": "dist/bundle.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true
  },
  "xo": {
    "ignores": [
      "static/template/locale/"
    ],
    "prettier": true,
    "env": [
      "browser",
      "es2020",
      "node"
    ],
    "rules": {
      "unicorn/no-process-exit": "off",
      "import/no-unassigned-import": "off",
      "import/no-absolute-path": "off",
      "react/prop-types": "off",
      "unicorn/filename-case": "off",
      "capitalized-comments": "off",
      "dot-notation": "off",
      "unicorn/prefer-node-remove": "off",
      "import/extensions": [
        "error",
        "never",
        {
          "png": "always",
          "wav": "always"
        }
      ]
    }
  },
  "scripts": {
    "clean": "rm -rf ./example/test-game && rm -f make-web-game.tgz",
    "go": "./build-test.sh",
    "build": "rm -rf dist && rollup --config rollup.config.js",
    "typecheck": "tsc --resolveJsonModule",
    "format": "prettier --write \"src/**/*.js\"",
    "lint": "eslint src",
    "check-all": "yarn lint && yarn typecheck",
    "release": "np --no-tests",
    "release:prepare": "yarn clean && yarn audit && yarn build && np --preview --no-tests"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "11.1.0",
    "@rollup/plugin-json": "4.0.3",
    "husky": "4.2.5",
    "lint-staged": "10.1.6",
    "np": "6.2.1",
    "rollup": "2.7.6",
    "rollup-plugin-copy": "3.3.0",
    "typescript": "3.8.3",
    "xo": "0.29.1"
  },
  "dependencies": {
    "cfonts": "2.8.2",
    "chalk": "4.0.0",
    "commander": "5.0.0",
    "execa": "4.0.0",
    "fs-extra": "9.0.0",
    "listr": "0.14.3"
  }
}
