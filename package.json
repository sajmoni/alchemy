{
  "name": "make-web-game",
  "version": "0.0.3",
  "main": "index.js",
  "author": "Simon Lagos <simon.lagos.sallhed@gmail.com>",
  "license": "MIT",
  "private": false,
  "files": [
    "./index.js",
    "./spawnCommand.js"
  ],
  "directories": {
    "example": "example"
  },
  "bin": "./index.js",
  "scripts": {
    "foo": "yarn build && cd example && yarn refresh && rm -rf test-game && yarn make-web-game test-game && cd -",
    "start": "parcel index.js --no-autoinstall",
    "build": "rm -rf dist && parcel build index.js --target node --no-cache",
    "typecheck": "tsc --module commonjs --allowJs --checkJs --noEmit --target es2016 src/*.js",
    "lint": "eslint .",
    "check-all": "yarn lint && yarn typecheck && yarn validate-ci",
    "release": "yarn build && np --no-tests"
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.19.1",
    "np": "5.2.1",
    "parcel-bundler": "1.12.4",
    "parcel-plugin-shebang": "1.2.8"
  },
  "dependencies": {
    "chalk": "3.0.0",
    "commander": "4.0.1",
    "cross-spawn": "7.0.1",
    "fs-extra": "8.1.0"
  }
}
